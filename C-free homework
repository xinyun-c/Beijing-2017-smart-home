#include<reg52.h>
typedef unsigned int uint;
typedef unsigned char uchar;
uint indi;
uchar trans;

void delay(uint i)
{
	while(i--);
}
void defa()
{
	TMOD=0x20;
	TH1=0xfa;
	TL1=0xfa;
	SCON=0x50;
	PCON &=0x7f;
	TR1=1;
	EA=1;
	ES=1;
}
void main()
{
	defa();
	while(indi==1)
	{
		P0=trans;
	}
}

void exchange() interrupt 4
{
	 uchar agent;
	 agent=SBUF;
	 RI=0;
	 P0=agent;
	 trans=agent;
	 SBUF=agent;
	 while(!TI);
	 indi=1;
	 	 
}
